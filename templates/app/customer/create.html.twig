{% extends '@layout/default.html.twig' %}

{% block content %}
    {% set name = form.get('name') %}
    {% do name.setAttribute('class', 'form-control') %}

    {% set email = form.get('email') %}
    {% do email.setAttribute('class', 'form-control') %}

    {% set submit = form.get('submit') %}
    {% do
        submit.setAttribute('class', 'btn btn-primary')
        .setLabel('Incluir')
    %}

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-xs-6 col-xs-offset-6 col-sm-4 col-sm-offset-8 col-md-3 col-md-offset-9 col-lg-2 col-lg-offset-10">
                        <a href="{{ url('customer.list') }}" class="btn btn-block btn-primary">
                            <i class="fa fa-reply"></i> Voltar
                        </a>
                    </div>
                </div>

                <div class="box-body">

                    {{ form().openTag(form) | raw }}
                        <div class="box-body">
                            <div class="form-group">
                                {{ formRow(name) }}
                            </div>
                            <div class="form-group">
                                {{ formRow(email) }}
                            </div>
                            <div class="box-footer">
                                {{ formButton(submit) }}
                            </div>
                        </div>
                    {{ form().closeTag() | raw}}

                    <form name="form" role="form" method="post" action="{{ url('customer.create') }}">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="name">Nome:</label>
                                <input type="text" class="form-control" name="name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input type="email" class="form-control" name="email" required="required">
                            </div>
                            <div class="box-footer">
                                <button class="btn btn-primary" type="submit">Incluir</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Cadastro de Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
    Cadastro de Contato
{% endblock %}