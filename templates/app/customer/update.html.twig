{% extends '@layout/default.html.twig' %}

{% block content %}

    {% include '@app/customer/_form-elements.html.twig' %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class', 'btn btn-primary').setLabel('Editar') %}

    {% do form.setAttribute('action', url('customer.update', {id: form.getObject().id})) %}
    {% do form.prepare() %}

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-xs-6 col-xs-offset-6 col-sm-4 col-sm-offset-8 col-md-3 col-md-offset-9 col-lg-2 col-lg-offset-10">
                        <a href="{{ url('customer.list') }}" class="btn btn-block btn-primary">
                            <i class="fa fa-reply"></i> Voltar
                        </a>
                    </div>
                </div>

                <div class="box-body">

                    {{ form().openTag(form) | raw }}
                    {{ formHidden(form.get('_method')) }}

                    {% include '@app/customer/_form.html.twig' %}

                    <div class="box-footer">
                        {{ formButton(submit) }}
                    </div>

                    {{ form().closeTag() | raw }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Edição de Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
    Edição de Contato - {{ form.getObject().name }}
{% endblock %}