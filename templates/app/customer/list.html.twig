{% extends '@layout/default.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div class="col-xs-6 col-xs-offset-6 col-sm-4 col-sm-offset-8 col-md-3 col-md-offset-9 col-lg-2 col-lg-offset-10">
                        <a href="{{ url('customer.create') }}" class="btn btn-block btn-info">
                            <i class="fa fa-plus-circle"></i>
                            Novo Contato
                        </a>
                    </div>
                </div>

                <div class="box-body">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th width="10px">#</th>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Ações</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for customer in customers %}
                            <tr>
                                <td>{{ customer.id }}</td>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.email }}</td>
                                <td>
                                    <a href="{{ url('customer.update', {id: customer.id}) }}" class="btn btn-info"
                                       title="Editar">
                                        <i class="fa fa-pencil"></i>
                                    </a>&nbsp;

                                    <a href="{{ url('customer.delete', {id: customer.id}) }}" class="btn btn-danger"
                                       title="Remover">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Listagem de Contatos - {{ parent() }}
{% endblock %}

{% block page_header %}
    Listagem de Contatos
{% endblock %}